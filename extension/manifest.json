{
  "manifest_version": 3,
  "name": "Web Pentest Companion",
  "description": "Trigger scans, monitor findings, and annotate vulnerabilities directly from the browser.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Pentest Companion"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
